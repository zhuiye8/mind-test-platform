# 服务器配置
PORT=3001
NODE_ENV=development

# 数据库配置（PostgreSQL）
DATABASE_URL="postgresql://psychology_user:psychology_password@localhost:5433/psychology_test_db?schema=public"

# Redis配置
REDIS_URL=redis://localhost:6379

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS配置
CORS_ORIGIN=http://localhost:3000

# 日志级别
LOG_LEVEL=info

# AI 服务配置 (V1.0.1 新增)
# OpenRouter API密钥 - 用于LLM语音匹配服务
OPENROUTER_API_KEY="sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# 百度TTS服务配置 - 用于文本转语音
BAIDU_TTS_TOKEN="bce-v3/ALTAK-eoORIdLxZSbPyfUp0VXJg/6a8b496ba00b9ad2b7514987b8653a5d3f67ddb8"

# 外部情绪分析WebSocket API地址
EMOTION_API_URL="ws://localhost:8080/fake_aiA"

# 外部AI服务配置 (与 emotion/app.py 对齐，默认 5678)
AI_SERVICE_URL="http://localhost:5678"

# 通用 LLM 配置（后端直接生成报告，不依赖AI服务大模型）
# 默认启用后端生成，可通过 AI_REPORT_BACKEND_ONLY=false 回退到 AI 服务 analyze_questions
AI_REPORT_BACKEND_ONLY=true
# OpenAI 兼容接口（例如本地代理、OpenRouter、自建）
LLM_API_BASE=https://api.openai.com
LLM_API_KEY=sk-xxxx
LLM_MODEL=gpt-nano
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TIMEOUT_MS=60000
LLM_USE_CHAT=true

# MediaMTX (WHIP/WHEP/RTSP) 配置
# 控制面端口（HTTP API/WHIP/WHEP 一般是 8889），RTSP 默认 8554
MEDIAMTX_HOST="http://127.0.0.1:8889"

# 是否在 /api/webrtc/start 自动通知 AI 服务开始 RTSP 消费
AI_AUTOSTART_RTSP=true

# 已弃用的旧配置（保留以备兼容）
REPORT_API_URL="http://localhost:8080/fake_aiB"
REPORT_API_KEY="optional-api-key-for-report-service"
